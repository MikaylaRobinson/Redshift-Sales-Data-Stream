{% macro show_table(rows, column_names = None) %}
    {% if column_names is not none %}
        <table class="striped">
        <tr>
            {% for name in column_names %}
            <th>{{name}}</th>
            {% endfor %}
        </tr>
        {% for row in rows %}
        <tr>
            {% for column in row %}
            <td>{{column}}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </table>
    {% else %}
    <table class="striped">
        {% for row in rows %}
        <tr>
            {% for column in row %}
            <td>{{column}}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </table>
    {% endif %}
{%- endmacro %}